{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-dom",
      "node",
      "jest",
      "jest-environment-jsdom",
      "@testing-library/jest-dom"
    ]
  },
  "include": ["src/global.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "app",
    "node_modules",
    "dist",
    "stories",
    "tsup.config.ts",
    "jest.setup.ts"
  ]
}

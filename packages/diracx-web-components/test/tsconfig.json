{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-dom",
      "node",
      "jest",
      "jest-environment-jsdom",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
